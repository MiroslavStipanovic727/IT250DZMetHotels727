<html t:type="layout" title="Sobe"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
      xmlns:p="tapestry:parameter">
    
    <div class="row">
                
        <div class="col-sm-4 col-md-4 col-lg-3">        
            <t:beaneditform object="soba" exclude="sid" reorder="simesobe, ssprat,
                            stv, sinternet, sdjakuzi"
                            submitlabel="message:submit-label"/>
        </div>
        <div class="col-sm-8 col-md-8 col-lg-9"> 
            <t:grid t:source="sobe" exclude="sid" 
                    add="delete" row="onesoba"
                    include="simesobe, ssprat, stv, sinternet, sdjakuzi">
                <p:deleteCell>
                    <t:actionlink t:id="delete" context="onesoba.sId">Delete</t:actionlink>
                </p:deleteCell>
            </t:grid>
        </div>
    </div>
</html>
